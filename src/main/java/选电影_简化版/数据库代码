-- 创建电影数据表
CREATE TABLE t_movies (
 id INT PRIMARY KEY AUTO_INCREMENT COMMENT "编号 主键约束",
 movie_name VARCHAR(50) NOT NULL COMMENT "电影名称",
 movie_type VARCHAR(20) NOT NULL COMMENT "电影类型",
 area VARCHAR(20) COMMENT "地区",
 rating DOUBLE COMMENT "电影评分"
);
